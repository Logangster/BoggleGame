<UserControl x:Class="BoggleClient.ViewUnaccessablePages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="58*"/>
        </Grid.RowDefinitions>

        <Button Name="ViewGameBoard" Grid.Column="0" Margin="10"  Click="ViewGameBoard_Click">View Game Board</Button>
        <Button Name="ViewReceivedRequest" Grid.Column="1" Margin="10" Click="ViewReceivedRequest_Click">View Received Request Page</Button>
        <Button Name="ViewEndScreen" Grid.Column="0" Margin="10" Grid.Row="1" Click="ViewEndScreen_Click">View End Page</Button>
        <Button Name="ViewRematchRequestScreen" Grid.Column="1" Margin="10" Grid.Row="1" Click="ViewRematchRequestScreen_Click">View Rematch Request Page</Button>
    </Grid>
</UserControl>
